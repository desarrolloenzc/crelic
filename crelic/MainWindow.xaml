            </StackPanel>

            <Frame Background="#555" NavigationUIVisibility="Hidden" Name="MainFrame" Margin="0,79,0,55" />

            <StackPanel  VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Height="50" Width="786" RenderTransformOrigin="0.378,0.42" >
